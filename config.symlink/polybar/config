[colors]
background = #00000000
background-alt = #444
foreground = ${xrdb:tomorrow.color7}
primary = ${xrdb:tomorrow.color3}
secondary = ${xrdb:tomorrow.color5}
alert = #bd2c40
col = #00f

[bar/desktop]
;monitor = ${env:MONITOR:HDMI-1}
;monitor = ${env:MONITOR}
;monitor = ${env:MONITOR:LVDS-1}
width = 100%
height = 50
fixed-center = false

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 5
line-color = {$xrdb:color1}

border-size = 0
border-color = #00000000

module-margin-left = 1
module-margin-right = 1

font-0 = mono:pixelsize=20;2
font-1 = "Font Awesome 5 Pro Light:size=23;3"
font-2 = "Font Awesome 5 Pro Regular:size=23;3"
font-3 = "Font Awesome 5 Pro Solid:size=23;3"

modules-left = workspaces-xmonad title-xmonad
modules-right = wlan alsa battery date time

[module/workspaces-xmonad]
type = custom/script
exec = tail -F /tmp/.xmonad-workspace-log
exec-if = [ -p /tmp/.xmonad-workspace-log ]
tail = true
format-underline = #444

[module/title-xmonad]
type = custom/script
exec = tail -F /tmp/.xmonad-title-log
exec-if = [ -p /tmp/.xmonad-title-log ]
tail = true
format-underline = #444

[module/wlan]
type = internal/network
interface = wlp2s0
interval = 10
format-disconnected = <label-disconnected>
format-disconnected-underline = ${self.format-connected-underline}
label-disconnected = 
label-disconnected-foreground = ${colors.foreground}
format-connected = <ramp-signal> <label-connected>
format-connected-underline = ${xrdb:tomorrow.color5}
label-connected = %essid%
ramp-signal-0 = 
ramp-signal-1 = 
ramp-signal-2 = 
ramp-signal-foreground = ${colors.foreground}

[module/date]
type = internal/date
interval = 1
date = "%Y-%m-%d"
format-prefix = " "
format-prefix-foreground = ${colors.foreground}
format-underline = ${xrdb:tomorrow.color12}
label = "%date%"

[module/time]
type = internal/date
interval = 0.5
time = "%H:%M:%S"
format-prefix = " "
format-prefix-foreground = ${colors.foreground}
format-underline = ${xrdb:tomorrow.color12}
label = "%time%"

[module/alsa]
type = internal/alsa
mapped = true
format-muted = ""
format-muted-foreground = ${colors.foreground}
format-muted-underline = ${xrdb:tomorrow.color1}
format-volume = "<ramp-volume> <label-volume>"
format-volume-foreground = ${colors.foreground}
format-volume-underline = ${xrdb:tomorrow.color2}
ramp-volume-0 = 
ramp-volume-1 = 

[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
;full-at = 98

format-charging = <animation-charging> <label-charging>
format-charging-underline = ${xrdb:tomorrow.color3}

format-full = <ramp-capacity> <label-full>
format-full-underline = ${self.format-charging-underline}

format-discharging = <animation-discharging> <label-discharging>
format-discharging-underline = ${self.format-charging-underline}

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 
ramp-capacity-foreground = ${colors.foreground}

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
animation-charging-foreground = ${colors.foreground}
animation-charging-framerate = 500

animation-discharging-0 = 
animation-discharging-1 = 
animation-discharging-2 = 
animation-discharging-3 = 
animation-discharging-4 = 
animation-discharging-foreground = ${colors.foreground}
animation-discharging-framerate = 500

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over
format-padding = 1

[global/wm]
margin-top = 5
margin-bottom = 5
