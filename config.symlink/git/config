[user]
  name = Christoph Schiessl
  email = cs@bugfactory.io

[diff]
[color]
  ui = auto

[alias]
  st = status --short
  c = commit --verbose
  aa = add --all
  amend = commit --amend
  co = checkout
  di = diff
  ds = diff --stat
  wdi = diff --word-diff
  dc = diff --cached
  dsc = diff --cached --stat
  dcs = diff --cached --stat # For some reason I keep mis-typing it like this ;)
  wdc = diff --cached --word-diff
  f = fetch
  fa = fetch --all
  b = branch
  ba = branch --all

  # Fancy logging.
  #   r = recent commits, only current branch
  #   ra = recent commits, all reachable refs
  #   l = all commits, only current branch
  #   la = all commits, all reachable refs
  r = !git l -30
  ra = !git r --all
  l = "!. ${XDG_CONFIG_HOME:-$HOME/.config}/git/helpers && pretty_git_log"
  la = !git l --all

  # Fancy stashing.
  sl = stash list
  sp = stash pop
  sa = stash apply
  ss = stash save --include-untracked
  sd = stash drop
  ssh = stash show -p

[push]
  default = simple

[diff "pdf"]
  binary = true

[difftool]
  prompt = false
