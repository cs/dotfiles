source "$HOME/.zsh/base.zsh"
source "$HOME/.zsh/prompt.zsh"
source "$HOME/.zsh/completion.zsh"
source "$HOME/.zsh/aliases.zsh"
source "$HOME/.zsh/history.zsh"
source "$HOME/.zsh/title.zsh"

# Use ESC to edit the current command line:
autoload -U edit-command-line
zle -N edit-command-line
bindkey '\033' edit-command-line

# Use CTRL-R to incrementally search through the history:
bindkey '^R' history-incremental-search-backward

#-------------------------------------------------------------------------------
# PostgreSQL defaults (i.e. don't use Unix domain sockets, which is more
#   convenient for dockerized DBs).
#-------------------------------------------------------------------------------
export PGHOST="localhost"
export PGPORT="5432"

#-------------------------------------------------------------------------------
# FZF
#-------------------------------------------------------------------------------
export FZF_DEFAULT_COMMAND="fd --type f --hidden"
export FZF_DEFAULT_OPTS="--bind 'ctrl-a:select-all'"

#-------------------------------------------------------------------------------
# Private ~/.bin
#-------------------------------------------------------------------------------
export PATH="$HOME/.bin:$PATH"

#-------------------------------------------------------------------------------
# Haskell
#-------------------------------------------------------------------------------
export PATH="$HOME/.cabal/bin:$PATH"

#-------------------------------------------------------------------------------
# Ruby: rbenv
#-------------------------------------------------------------------------------
export PATH="$HOME/.rbenv/bin:$PATH"
eval "$(rbenv init -)"

#-------------------------------------------------------------------------------
# Ruby: bundler binstubs
#-------------------------------------------------------------------------------
export PATH="./bin:$PATH"
