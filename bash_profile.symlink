#------------------------------------------------------------------------------
# YARN
#------------------------------------------------------------------------------
command -v yarn > /dev/null && export PATH="$(yarn global bin):$PATH"

#------------------------------------------------------------------------------
# Ruby
#------------------------------------------------------------------------------
[ -d "$HOME/.rbenv" ] && export PATH="$HOME/.rbenv/bin:$PATH"
command -v rbenv > /dev/null && eval "$(rbenv init -)"

#------------------------------------------------------------------------------
# Per-user Binaries
#------------------------------------------------------------------------------
export PATH="$HOME/.local/bin:$PATH" # private ~/.local/bin

#------------------------------------------------------------------------------
# Load .bashrc if it exists
#------------------------------------------------------------------------------
[ -f "$HOME/.bashrc" ] && source "$HOME/.bashrc"

#------------------------------------------------------------------------------
# Start Window Manager on tty1
#------------------------------------------------------------------------------
[ "$(tty)" = "/dev/tty1" ] && GDK_BACKEND=wayland exec sway
