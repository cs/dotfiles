#include ".colors/Solarized-Dark.Xresources"
!#include ".colors/Solarized-Light.Xresources"
#include ".colors/Solarized-Common.Xresources"

URxvt.perl-ext-common: font-size,clear-screen

URxvt.iso14755: false
URxvt.iso14755_52: false

!-------------------------------------------------------------------------------
! Fonts
!-------------------------------------------------------------------------------
URxvt.font:           xft:Menlo for Powerline:size=14
URxvt.keysym.C-0x30:  font-size:reset
URxvt.keysym.C-equal: font-size:increase
URxvt.keysym.C-minus: font-size:decrease
URxvt.font-size.step: 1

!-------------------------------------------------------------------------------
! Appearance
!-------------------------------------------------------------------------------
URxvt.scrollBar: false
URxvt.internalBorder: 3
URxvt.letterSpace: -1

!-------------------------------------------------------------------------------
! Behavior
!-------------------------------------------------------------------------------
URxvt.scrollTtyOutput: false
URxvt.scrollWithBuffer: true
URxvt.scrollTtyKeypress: true
URxvt.saveLines: 10000

! Disable the scrollback buffer on the secondary screen
URxvt.secondaryScreen: true
URxvt.secondaryScroll: false

URxvt.urgentOnBell: true

Xft.dpi:       138
Xft.autohint:  false
Xft.lcdfilter: lcddefault
Xft.hintstyle: hintfull
Xft.hinting:   true
Xft.antialias: true
Xft.rgba:      rgb
